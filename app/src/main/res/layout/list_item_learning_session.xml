<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="LSID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lsIdTxt"
            android:padding="6dp"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:text="CourseCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/courseCodeTxt"
            android:padding="6dp"
            android:layout_toRightOf="@+id/lsIdTxt"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:text="CourseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/courseDateTxt"
            android:padding="6dp"
            android:layout_below="@+id/courseCodeTxt"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:text="ModuleNo."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/moduleNumberTxt"
            android:padding="6dp"
            android:layout_below="@+id/courseDateTxt"
            android:textColor="@android:color/background_dark" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>