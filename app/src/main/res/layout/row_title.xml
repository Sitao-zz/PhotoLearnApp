<?xml version="1.0" encoding="utf-8"?><!-- player_row.xml -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/titleLayoutID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/titleTextViewID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Learning Title name" />

            <TextView
                android:id="@+id/dateTimeTextViewID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22/03/2018 15:15"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/nextImageViewID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/titleLayoutID"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            app:srcCompat="@drawable/ic_navigate_next" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
